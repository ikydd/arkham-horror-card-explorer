{
  "name": "card-explorer",
  "version": "1.0.0",
  "scripts": {
    "build": "cd client && npm run build",
    "start": "npm run server",
    "test": "concurrently \"npm run test:server\" \"npm run test:client\"",
    "test:client": "cd client && npm test",
    "test:server": "concurrently \"npm run test:unit\" && \"npm run test:lint\"",
    "test:lint": "npm run test:prettier && npm run test:eslint",
    "test:eslint": "eslint **/*.js",
    "test:prettier": "prettier --write **/*.js",
    "test:unit": "jest",
    "client": "cd client && npm start",
    "server": "nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\""
  },
  "dependencies": {
    "koa": "^2.11.0",
    "koa-router": "^8.0.8",
    "koa-sendfile": "^2.0.1",
    "koa-static": "^5.0.0"
  },
  "devDependencies": {
    "concurrently": "^4.0.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.19.0",
    "jest": "^23.6.0",
    "mock-fs": "^4.11.0",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.4",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/client/"
    ]
  }
}
